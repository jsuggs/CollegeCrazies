{% extends "SofaChampsSuperBowlChallengeBundle::layout.html.twig" %}

{% form_theme form.bonusQuestion1 _self %}
{% form_theme form.bonusQuestion2 _self %}
{% form_theme form.bonusQuestion3 _self %}
{% form_theme form.bonusQuestion4 _self %}
{% form_theme form.bonusQuestion5 _self %}
{% form_theme form.bonusQuestion6 _self %}
{% form_theme form.bonusQuestion7 _self %}
{% form_theme form.bonusQuestion8 _self %}

{% block content %}
    <h2>Superbowl Challenge</h2>

    <form action="{{ path('sbc_pick', {year: year}) }}" method="post" class="form" {{ form_enctype(form) }}>
        <fieldset>
            <legend>Final Scores</legend>
            <table class="table table-bordered">
                <caption>Guess the final score at halftime and the end of the game.</caption>
                <thead>
                    <tr>
                        <th></th>
                        <th>{{ config.AfcTeam.name }}</th>
                        <th>{{ config.NfcTeam.name }}</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th>Final</th>
                        <td>{{ form_widget(form.afcFinalScore) }}</td>
                        <td>{{ form_widget(form.nfcFinalScore) }}</td>
                    </tr>
                    <tr>
                        <th>Halftime</th>
                        <td>{{ form_widget(form.nfcHalftimeScore) }}</td>
                        <td>{{ form_widget(form.afcHalftimeScore) }}</td>
                    </tr>
                </tbody>
            </table>
        </fieldset>

        <fieldset>
            <legend>First to score</legend>
            <table class="table table-bordered">
                <caption>Guess the first to score in each of the quarters</caption>
                <tbody>
                    <tr>
                        <th>First Quarter</th>
                        <td>{{ form_widget(form.firstTeamToScoreFirstQuarter) }}</td>
                    </tr>
                    <tr>
                        <th>Second Quarter</th>
                        <td>{{ form_widget(form.firstTeamToScoreSecondQuarter) }}</td>
                    </tr>
                    <tr>
                        <th>Third Quarter</th>
                        <td>{{ form_widget(form.firstTeamToScoreThirdQuarter) }}</td>
                    </tr>
                    <tr>
                        <th>Fourth Quarter</th>
                        <td>{{ form_widget(form.firstTeamToScoreFourthQuarter) }}</td>
                    </tr>
                </tbody>
            </table>
        </fieldset>

        <fieldset>
            <legend>Bonus Questions</legend>
            <ol>
                <li>
                    {{ config.questionIndex(1).text }}
                    {{ form_widget(form.bonusQuestion1) }}
                </li>
                <li>
                    {{ config.questionIndex(2).text }}
                    {{ form_widget(form.bonusQuestion2) }}
                </li>
                <li>
                    {{ config.questionIndex(3).text }}
                    {{ form_widget(form.bonusQuestion3) }}
                </li>
                <li>
                    {{ config.questionIndex(4).text }}
                    {{ form_widget(form.bonusQuestion4) }}
                </li>
                <li>
                    {{ config.questionIndex(5).text }}
                    {{ form_widget(form.bonusQuestion5) }}
                </li>
                <li>
                    {{ config.questionIndex(6).text }}
                    {{ form_widget(form.bonusQuestion6) }}
                </li>
                <li>
                    {{ config.questionIndex(7).text }}
                    {{ form_widget(form.bonusQuestion7) }}
                </li>
                <li>
                    {{ config.questionIndex(8).text }}
                    {{ form_widget(form.bonusQuestion8) }}
                </li>
            </ol>
        </fieldset>

        <div class="form-actions">
            <input type="submit" class="btn btn-primary" value="Update Picks" />
            {{ form_rest(form) }}
        </div>
    </form>
{% endblock %}

{% block choice_widget_expanded %}
{% spaceless %}
    <div {{ block('widget_container_attributes') }}>
    {% for child in form %}
        <label class="radio">
            {{ form_widget(child) }} {{ child.vars.label|trans({}, translation_domain) }}
        </label>
    {% endfor %}
    </div>
{% endspaceless %}
{% endblock choice_widget_expanded %}
