{% extends "SofaChampsCoreBundle::Layout/layout.html.twig" %}

{% block title%} - Superbowl Challenge{% endblock %}

{% block nav_admin %}
    <li><a href="{{ path('sbc_admin_config', {year: year}) }}">Config</a></li>
    <li><a href="{{ path('sbc_admin_result', {year: year}) }}">Result</a></li>
{% endblock %}

{% block nav_primary %}
    <li><a href="{{ path('sbc_home', {year: year}) }}">Superbowl Challenge Home</a></li>
    {% if sbc_picks_open(year) %}
        {% if is_granted('ROLE_USER') and app.user.getSuperBowlChallengePickForYear(year) %}
            <li><a href="{{ path('sbc_pick', {year: year}) }}">Edit your picks</a></li>
        {% else %}
            <li><a href="{{ path('sbc_pick', {year: year}) }}">Create your picks</a></li>
        {% endif %}
    {% endif %}
    <li><a href="{{ path('sbc_leaderboard', {year: year}) }}">Leaderboard</a></li>
{% endblock %}
