{% extends "SofaChampsBowlPickemBundle::layout.html.twig" %}

{% block content %}
    <h2>Manage Picksets</h2>
    <p>Choose the pickset you want to use for the league</p>
    <form action="{{ path('pickset_manage') }}" method="POST" id="pickset-update">
        <table class="table table-bordered table-hover">
            <thead>
                <th style="width: 60px">Commish</th>
                <th>League</th>
                {% for pickSet in pickSets %}
                    <th><a href="{{ path(picks_locked ? 'pickset_view_noleague' : 'pickset_edit', {picksetId: pickSet.id}) }}"><i class="icon-list"></i> {{ pickSet.name }}</a></th>
                {% endfor %}
            </thead>
            <tbody>
            {% for league in leagues %}
                {% set leaguePickSet = league.getPickSetForUser(app.user) %}
                <tr>
                    <td>{{ league.userIsCommissioner(app.user) ? '<i class="icon-certificate" title="You are the commissioner for this league"></i>' : '' }}</td>
                    <td><a href="{{ path('league_home', {leagueId: league.id}) }}"><i class="icon-home"></i> {{ league.name }}</a></td>
                    {% for pickSet in pickSets %}
                        <td><input type="radio" name="league_pickset[{{ league.id }}]" value="{{ pickSet.id }}"{% if pickSet == leaguePickSet %} checked="checked"{% endif %} /></td>
                    {% endfor %}
                </tr>
            {% endfor %}
        </table>
        <button type="submit" class="btn btn-success">Update Picksets</button>
    </form>
    <script>
        $(document).ready(function() {
            $("#pickset-update").submit(function(e) {
                var $form = this;
                e.preventDefault();
                bootbox.confirm('Are you sure you want to assign your picksets to new leagues?', 'No', 'Yes', function(result) {
                    if (result) {
                        $form.submit();
                    }
                });
            });
        });
    </script>

    <div class="row-fluid">
        <h4>Looking for some more action?</h4>
        <a href="{{ path('league_find') }}" class="btn btn-info">Find another League to Join</a>
    </div>

    <div class="row-fluid">
        <h4>Need to leave a League?</h4>
        <a href="{{ path('league_leave') }}" class="btn btn-warning">Leave a League</a>
    </div>
{% endblock %}
