<div class='datagrid'>
    <table>
        <thead>
            <tr>
                <th>Team</th>
                <th>Favorite</th>
                <th>Expert Pick</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><img src='{{ favorite.thumbnail }}' alt='{{ favorite.name }}' width='20' height='20' /> {{ favorite.name }}</td>
                <td>{{ game.spread == 0 ? '0' : '-'~ game.spread|abs }}</td>
                <td>--</td>
            </tr>
            <tr>
                <td><img src='{{ underdog.thumbnail }}' alt='{{ underdog.name }}' width='20' height='20' /> {{ underdog.name }}</td>
                <td>--</td>
                <td>--</td>
            </tr>
        </tbody>
    </table>
</div>
