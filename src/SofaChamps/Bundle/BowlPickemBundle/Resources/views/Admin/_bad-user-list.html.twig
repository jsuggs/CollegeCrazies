<table class="table table-bordered">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Impersonate</th>
        </tr>
    </thead>
    <tbody>
    {% for user in users %}
        <tr>
            <td>{{ user.username }}</td>
            <td>{{ user.email }}</td>
            <td><a href="{{ path('bp_home', {season:season, _switch_user: user.username}) }}" class="btn btn-info">{{ user.username }}</a></td>
        </tr>
    {% endfor %}
    </tbody>
</table>
