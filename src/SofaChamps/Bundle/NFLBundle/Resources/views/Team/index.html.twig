<h1>Team list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Logo</th>
            <th>Id</th>
            <th>Name</th>
            <th>Conference</th>
            <th>Division</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>
                <img src="{{ "/img/nfl/%s.gif"|format(entity.id) }}" alt="{{ entity.name }}"/>
            </td>
            <td><a href="{{ path('nfl_admin_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.conference }}</td>
            <td>{{ entity.division }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('nfl_admin_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('nfl_admin_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('nfl_admin_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
