<h1>Team</h1>

<img src="{{ "/img/nfl/%s.gif"|format(entity.id) }}" alt="{{ entity.name }}"/>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Conference</th>
            <td>{{ entity.conference }}</td>
        </tr>
        <tr>
            <th>Division</th>
            <td>{{ entity.division }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('nfl_admin') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('nfl_admin_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('nfl_admin_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
