{% extends "CollegeCraziesMainBundle::layout.html.twig" %}

{% block content %}
    <h2>Find a League</h2>
    <div class="row">
        <div class="span6">
            <h3>KNOW the league you'd like to join?</h3>
            <p>Enter the league id and password below</p>
            <form action="{{ path('league_join') }}" method="post" class="form-horizontal">
                <div class="control-group">
                    {{ form_label(form.id, 'League ID', {label_attr: {class: 'control-label'}}) }}
                    <div class="controls">
                        {{ form_widget(form.id) }}
                    </div>
                </div>
                <div class="control-group">
                    {{ form_label(form.password, 'League Password', {label_attr: {class: 'control-label'}}) }}
                    <div class="controls">
                        {{ form_widget(form.password) }}
                    </div>
                </div>
                <div class="control-group">
                    <div class="controls">
                        <button type="submit" class="btn">Join League</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="span6">
            <h3>BROWSE Public Leagues</h3>
            <a href="{{ path('league_public') }}" class="btn">Browse Public Leagues</a>

            <h3 style="padding-top: 25px">CREATE a League</h3>
            <a href="{{ path('league_new') }}" class="btn">Create a League</a>
        </div>
    </div>
{% endblock %}
